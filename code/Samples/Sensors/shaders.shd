//------------------------------------------------------------------------------
//  shaders.shd
//------------------------------------------------------------------------------

@uniform_block vsParams VSParams
mat4 mvp ModelViewProjection
@end

@vs vs
@use_uniform_block vsParams
@in vec4 position
@in vec4 normal
@out vec4 nrm
    gl_Position = vsParams.mvp * position;
    nrm = normal;
@end

@fs fs
@in vec4 nrm
    gl_FragColor = nrm * 0.5 + 0.5;
@end

@program Shader vs fs
