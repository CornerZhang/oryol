//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for BlendTest sample.
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
//  background shader
//
@vs backgroundVS
@in vec4 position
@in vec2 texcoord0
@out vec2 uv0
    gl_Position = position;
    uv0 = texcoord0;
@end

@fs backgroundFS
@in vec2 uv0
    vec2 xy = fract(uv0 * 32.0) * 0.5 + 0.25;
    float f = xy.x * xy.y;
    gl_FragColor = vec4(f, f, f, 1.0);
@end

@program BGShader backgroundVS backgroundFS

//------------------------------------------------------------------------------
//  triangle shader
//
@uniform_block params Params
vec4 translate Translate
@end

@vs triangleVS
@use_uniform_block params
@in vec4 position
@in vec4 color0
@out vec4 color
    gl_Position = position + params.translate;
    color = color0;
@end

@fs triangleFS
@in vec4 color
    gl_FragColor = color;
@end

@program TriShader triangleVS triangleFS
