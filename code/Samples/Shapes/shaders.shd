//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for Shapes sample
//------------------------------------------------------------------------------

@uniform_block params Params
mat4 mvp ModelViewProjection
@end

@vs vs
@use_uniform_block params
@in vec4 position
@in vec4 color0
@out vec4 color
    gl_Position = params.mvp * position;
    color = color0;
@end

@fs fs
@in vec4 color
    gl_FragColor = color;
@end

@program Shader vs fs
