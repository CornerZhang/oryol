//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for Triangle sample.
//------------------------------------------------------------------------------

@vs vs
@in vec4 position
@in vec4 color0
@out vec4 color
    gl_Position = position;
    color = color0;
@end

@fs fs
@in vec4 color
    gl_FragColor = color;
@end

@program Shader vs fs
